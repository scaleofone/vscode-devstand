{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Watch extension",
            "type": "npm",
            "script": "extension-watch",
            "isBackground": true,
            "presentation": {
                "reveal": "never",
                "revealProblems": "onProblem"
            },
            "problemMatcher": {
                "source": "esbuild",
                "pattern": {
                    "regexp": "> (.*?):([0-9]+):([0-9]+): (warning|error): (.+)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": {
                        "regexp": "\\[watch\\] build started"
                    },
                    "endsPattern": {
                        "regexp": "\\[watch\\] build sucessfull"
                    }
                }
            }
        },
        {
