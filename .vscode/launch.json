{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Watch & Run Extension",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": ["--extensionDevelopmentPath=${workspaceRoot}"],
            "outFiles": ["${workspaceFolder}/dist/extension/**/*.js"],
            "preLaunchTask": "npm: extension-watch",
        }
    ]
}
