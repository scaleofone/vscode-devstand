{
  "private": true,
  "name": "devstand",
  "displayName": "DevStand",
  "version": "0.0.1",
  "type": "module",
  "main": "./dist/extension/extension.cjs",
  "browser": "./dist/extension/extension.js",
  "engines": {
    "vscode": "^1.66.0"
  },
  "contributes": {
    "menus": {
      "explorer/context": [
        {
          "command": "DevStand.openWizardFromFolder",
          "group": "2_workspace",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "DevStand.scaffoldBreadboardFolder",
          "group": "2_workspace",
          "when": "explorerResourceIsFolder && !isWeb"
        },
        {
          "command": "DevStand.openWithBreadboardEditor",
          "group": "navigation",
          "when": "resourceFilename =~ /breadboard\\.jsonnet$/"
        }
      ]
    },
    "customEditors": [
      {
        "viewType": "DevStand.BreadboardEditorProvider",
        "displayName": "Breadboard editor",
        "selector": [
          {
            "filenamePattern": "*breadboard.jsonnet"
          }
        ],
        "priority": "option"
      }
    ],
    "commands": [
      {
        "command": "DevStand.openWizardFromFolder",
        "title": "Create Dockerfile",
        "category": "DevStand"
      },
      {
        "command": "DevStand.scaffoldBreadboardFolder",
        "title": "Scaffold breadboard directory",
        "category": "DevStand"
      },
      {
        "command": "DevStand.openWithBreadboardEditor",
        "title": "Open with Breadboard editor",
        "category": "DevStand"
      },
      {
        "command": "DevStand.wizardOpen",
        "title": "Open wizard",
        "category": "DevStand"
      }
    ]
  },
  "activationEvents": [
    "onCustomEditor:DevStand.BreadboardEditorProvider",
    "onCommand:DevStand.openWizardFromFolder",
    "onCommand:DevStand.scaffoldBreadboardFolder",
    "onCommand:DevStand.openWithBreadboardEditor",
    "onCommand:DevStand.wizardOpen"
  ],
  "scripts": {
    "extension-build": "node esbuild-extension.js",
    "extension-watch": "node esbuild-extension.js --watch --sourcemap",
    "extension-web-build": "node esbuild-extension.js --web",
    "extension-web-watch": "node esbuild-extension.js --web --watch --sourcemap",
    "extension-build-prod": "node esbuild-extension.js --minify && node esbuild-extension.js --web --minify",
    "webview-build": "node esbuild-webview.js",
    "webview-watch": "node esbuild-webview.js --watch --sourcemap"
  },
  "devDependencies": {
    "@types/vscode": "1.66.0",
    "@vscode/codicons": "0.0.27",
    "esbuild": "0.12.29",
    "heptio-vscode-jsonnet": "https://codeload.github.com/scaleofone/vscode-jsonnet/legacy.tar.gz/master",
    "jsonschema": "1.4.0",
    "svelte": "3.44.2",
    "svelte-forms": "2.2.1",
    "throttle-debounce": "3.0.1"
  }
}
